{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/tjoen/infernosaber.git"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "conda env create -f anaconda_environment.yaml",
        "path": "infernosaber"
      }
    },
    {
      "method": "shell.start",
      "params": {
        "path": "infernosaber"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "conda init cmd.exe",
        "on": [
          {
            "event": null,
            "return": true
          }
        ]
      }
    },    
    {
      "method": "shell.enter",
      "params": {
        "message": "conda info --envs",
        "on": [
          {
            "event": null,
            "return": true
          }
        ]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r requirements.txt",
        "on": [
          {
            "event": null,
            "return": true
          }
        ]
      }
    },
    {
      "method": "input",
      "params": {
        "title": "Install Success",
        "description": "Go back to the dashboard and launch the app!"
      }
    },
    {
      "method": "browser.open",
      "params": {
        "uri": "/?selected=infernosaber"
      }
    }
  ]
}
